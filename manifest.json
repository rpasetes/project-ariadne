{
  "manifest_version": 3,
  "name": "Webpage Highlighter",
  "version": "1.0",
  "description": "Allows users to highlight text on webpages with custom styles",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "css": ["styles.css"]
    }
  ]
}